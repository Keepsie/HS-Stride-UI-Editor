<Window x:Class="HS.Stride.UI.Editor.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor Settings"
        Width="400"
        Height="480"
        WindowStartupLocation="CenterOwner"
        Background="#1A1A1A"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Visual Settings"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <StackPanel Grid.Row="1">
            <!-- Page Resolution -->
            <TextBlock Text="Page Resolution" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Size:"/>
                <TextBox Grid.Column="1"
                         x:Name="DesignWidthTextBox"
                         Text="1280"
                         HorizontalAlignment="Stretch"/>
                <TextBlock Grid.Column="2" Text=" Ã— " HorizontalAlignment="Center"/>
                <TextBox Grid.Column="3"
                         x:Name="DesignHeightTextBox"
                         Text="720"
                         HorizontalAlignment="Stretch"/>
            </Grid>

            <!-- Grid -->
            <TextBlock Text="Grid" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <CheckBox x:Name="ShowGridCheckBox"
                      Content="Show grid lines"
                      IsChecked="True"
                      Foreground="#E0E0E0"
                      Margin="0,0,0,15"/>

            <!-- Guide Lines -->
            <TextBlock Text="Guide Lines" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Color:"/>
                <Border Grid.Row="0" Grid.Column="1"
                        x:Name="GuideColorPreview"
                        Background="#FF0096FF"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1"
                        CornerRadius="4"
                        Height="24"
                        Cursor="Hand"
                        MouseLeftButtonDown="GuideColorPreview_Click"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Thickness:"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         x:Name="GuideThicknessTextBox"
                         Text="1"
                         Width="60"
                         HorizontalAlignment="Left"/>
            </Grid>

            <!-- Selection -->
            <TextBlock Text="Selection" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Color:"/>
                <Border Grid.Row="0" Grid.Column="1"
                        x:Name="SelectionColorPreview"
                        Background="#FF0000FF"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1"
                        CornerRadius="4"
                        Height="24"
                        Cursor="Hand"
                        MouseLeftButtonDown="SelectionColorPreview_Click"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Thickness:"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         x:Name="SelectionThicknessTextBox"
                         Text="2"
                         Width="60"
                         HorizontalAlignment="Left"/>
            </Grid>

            <!-- Hover Highlight -->
            <TextBlock Text="Hover Highlight" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Color:"/>
                <Border Grid.Column="1"
                        x:Name="HighlightColorPreview"
                        Background="#FF6496FF"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1"
                        CornerRadius="4"
                        Height="24"
                        Cursor="Hand"
                        MouseLeftButtonDown="HighlightColorPreview_Click"/>
            </Grid>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="ResetButton"
                    Content="Reset Defaults"
                    Padding="12,8"
                    Margin="0,0,10,0"
                    Background="#3A3A3A"
                    Foreground="#E0E0E0"
                    BorderThickness="0"
                    Click="ResetButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Padding="12,8"
                    Margin="0,0,10,0"
                    Background="#3A3A3A"
                    Foreground="#E0E0E0"
                    BorderThickness="0"
                    Click="CancelButton_Click"/>
            <Button x:Name="OkButton"
                    Content="OK"
                    Padding="12,8"
                    Background="#0A84FF"
                    Foreground="White"
                    BorderThickness="0"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
